{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "2.1.0",
  "description": "Track your time super easily!",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}